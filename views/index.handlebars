<div class="card" style="background-color:aquamarine">
    <div class="container text-light">
      <h1 class="display-5" style="text-shadow: 2px 2px gray">Indie Game Scraper</h1>
      <p class="lead" style="text-shadow: 2px 2px gray">Find some new indie games and write notes about them!</p>
    </div>
  </div>
</div>
  
<div class="container-fluid" style="background-color:cadetblue">
  <div class="row">
    <div class="col-md-8" style="display: inline-block;overflow: auto;height: 600px">
      <div class="container" id="articles">
        {{#each articles}}
          {{> article-block }}
        {{/each}}
      </div>
    </div>
    <div class="col-md-4">
      <div id="notes">
      </div>
    </div>
  </div>